		"ethers": "^4.0.27",
		"express": "^4.16.4",
		"express-validator": "^5.3.1",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/body-parser": "^1.17.0",
		"@types/compression": "0.0.36",
		"@types/cors": "^2.8.4",
		"@types/dotenv": "^6.1.0",
		"@types/express": "^4.16.1",
		"@types/express-validator": "^3.0.0",
		"@types/jest": "^24.0.11",
